# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
#config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
#config focusCheckWidthMax 3000
config keyboardLayout qwerty
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
#config windowHintsDuration 5
config windowHintsSpread true
config windowHintsOrder persist

# Monitor Aliases
alias mon-laptop      0
alias mon-apple       1
alias mon-dell        2

# Misc Aliases
alias browser 'Google Chrome'
alias editor 'Sublime Text'

# Misc Aliases
alias showHintsLeftHand hint ASDFRVECWXQZ
alias showNormalHint hint ASDFGHJKLRVECWXTBYNUMIQZOP

=
# Positions
alias full          move screenOriginX;screenOriginY                    screenSizeX;screenSizeY
alias topmiddle     move screenOriginX+screenSizeX/6;screenOriginY      screenSizeX-screenSizeX/3;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                    screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY      screenSizeX/2;screenSizeY
alias 1-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY         ${mon-laptop}
alias 1-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY         ${mon-laptop}
alias 1-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-laptop}
alias 1-topleft corner top-left resize:screenSizeX/2;screenSizeY/2          ${mon-laptop}
alias 1-topright corner top-right resize:screenSizeX/2;screenSizeY/2          ${mon-laptop}
alias 1-bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2          ${mon-laptop}
alias 1-bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2          ${mon-laptop}
alias 1-bottomhalf corner bottom-left resize:screenSizeX;screenSizeY/2          ${mon-laptop}
alias 1-tophalf corner top-left resize:screenSizeX;screenSizeY/2          ${mon-laptop}

alias 2-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY         ${mon-apple}
alias 2-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY         ${mon-apple}
alias 2-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-apple}
alias 2-topleft corner top-left resize:screenSizeX/2;screenSizeY/2          ${mon-apple}
alias 2-topright corner top-right resize:screenSizeX/2;screenSizeY/2          ${mon-apple}
alias 2-bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2          ${mon-apple}
alias 2-bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2          ${mon-apple}
alias 2-bottomhalf corner bottom-left resize:screenSizeX;screenSizeY/2          ${mon-apple}
alias 2-tophalf corner top-left resize:screenSizeX;screenSizeY/2          ${mon-apple}

alias 3-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY         ${mon-dell}
alias 3-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY         ${mon-dell}
alias 3-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-dell}
alias 3-topleft corner top-left resize:screenSizeX/2;screenSizeY/2          ${mon-dell}
alias 3-topright corner top-right resize:screenSizeX/2;screenSizeY/2          ${mon-dell}
alias 3-bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2          ${mon-dell}
alias 3-bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2          ${mon-dell}
alias 3-bottomhalf corner bottom-left resize:screenSizeX;screenSizeY/2          ${mon-dell}
alias 3-tophalf corner top-left resize:screenSizeX;screenSizeY/2          ${mon-dell}

# 1 Monitor layout
layout 1monitor 'iTerm':MAIN_FIRST                       ${1-bottomleft}
layout 1monitor 'Sublime Text':MAIN_FIRST                ${1-topleft}
layout 1monitor 'DbVisualizer':MAIN_FIRST                ${1-right}
layout 1monitor 'Google Chrome':MAIN_FIRST               ${1-right}

layout 2monitors 'Sublime Text':MAIN_FIRST               ${2-left}
layout 2monitors 'Google Chrome':MAIN_FIRST              ${2-right}
layout 2monitors 'DbVisualizer':MAIN_FIRST               ${1-left}
layout 2monitors 'iTerm':MAIN_FIRST                      ${1-right}

layout 3monitors 'iTerm':MAIN_FIRST                      ${1-full}
layout 3monitors 'Sublime Text':MAIN_FIRST               ${2-full}
layout 3monitors 'DbVisualizer':MAIN_FIRST               ${3-left}
layout 3monitors 'Google Chrome':MAIN_FIRST              ${3-right}

# Default Layouts
#default 3monitors resolutions:${mon-laptop},#{mon-apple},#{mon-dell};
#default 2monitors resolutions:${mon-laptop},#{mon-apple};
#default 1monitor  resolutions:${mon-laptop}
default 3monitors count:3
default 2monitors count:2
default 1monitor count:1

# ======================================
# The HYPER key
# ======================================

alias hyper shift;ctrl;alt;cmd

bind `:${hyper} layout 3monitors
bind 2:${hyper} layout 2monitors
bind 1:${hyper} layout 1monitor

# Goto app
bind g:${hyper}  ${showHintsLeftHand}


# Location bindings
bind [:${hyper} ${lefthalf}
bind =:${hyper} ${full}
bind ]:${hyper} ${righthalf}
bind -:${hyper} ${topmiddle}

# Throw window to next monitor
bind ':${hyper} throw next

# Focus Bindings
bind right:${hyper}    focus right
bind left:${hyper}     focus left
bind up:${hyper}       focus up
bind down:${hyper}     focus down

# App bindings
bind a:${hyper} focus 'iTerm'
bind s:${hyper} focus ${editor}
bind d:${hyper} focus 'DbVisualizer'
bind f:${hyper} focus ${browser}
bind q:${hyper} focus 'Finder'

